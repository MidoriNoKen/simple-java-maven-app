node {
    def pythonImage = 'python:3-alpine'

    stage('Checkout') {
        checkout scm
    }

    stage('Build') {
        dir('sources') {
            docker.image(pythonImage).inside {
                sh 'mvn -B -DskipTests clean package'
            }
        }
    }

    stage('Test') {
        dir('sources') {
            docker.image(pythonImage).inside {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }

    stage('Deliver') {
        dir('sources') {
            // Jalankan skrip deliver.sh
            sh '../jenkins/scripts/deliver.sh'
        }
    }
}
