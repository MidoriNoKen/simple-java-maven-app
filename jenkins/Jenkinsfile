node {
    def mavenImage = 'maven:3.9.0'

    stage('Build') {
        agent {
            docker {
                image mavenImage
                args '-v /root/.m2:/root/.m2'
            }
        }
        steps {
            sh 'mvn -B -DskipTests clean package'
        }
    }

    stage('Test') {
        agent {
            docker {
                image mavenImage
                args '-v /root/.m2:/root/.m2'
            }
        }
        steps {
            sh 'mvn test'
        }
        post {
            always {
                junit 'target/surefire-reports/*.xml'
            }
        }
    }

    stage('Deliver') {
        agent {
            docker {
                image mavenImage
                args '-v /root/.m2:/root/.m2'
            }
        }
        steps {
            sh './jenkins/scripts/deliver.sh'
        }
    }
}
