pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    def mvnHome = tool name: 'Maven', type: 'Tool'
                    sh "${mvnHome}/bin/mvn clean install"
                }
            }
        }

        stage('Deploy to Heroku') {
            steps {
                script {
                    withCredentials([[$class: 'HerokuApiKeyBinding', credentialsId: 'eaeeb0eb-d969-420f-83ae-553e2aba3d53']]) {
                        sh 'heroku container:login'
                        sh 'heroku container:push web -a submission-cicd-pipeline-midor'
                        sh 'heroku container:release web -a submission-cicd-pipeline-midor'
                    }
                }
            }
        }
    }
}
